@model IEnumerable<Lab3_1223319_1003519.Models.Farmaco>

@{
    ViewBag.Title = "Index";
}

<h2>Tu salud en mis manos</h2>

@using (Html.BeginForm("AbrirArchivo",
                        "Farmaco",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{

    <input type="file" name="file" value="Seleccionar Archivo" id="file" />
    <input type="submit" value="Abrir" />

}

@using (Html.BeginForm())
{
    <input type="text" class="form-control" name="search" placeholder="Buscar farmaco" />
    <button type="submit">Buscar</button>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Existencia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Existencia)
    </td>
    <td>
        @Html.ActionLink("Agregar al carrito", "AgregarProducto", new { id = item.ID })|
